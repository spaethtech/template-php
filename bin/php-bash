#!/usr/bin/env bash
INCLUDE_DIR=$(realpath "$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"/.common)

COMMAND_RUN=(--tty --entrypoint=/bin/bash)
COMMAND_TAG=php
COMMAND_VER=7.4
COMMAND_DIR=/opt/project

quoted_args="$(printf "${1+ %q}" "$@")"

# shellcheck source=./.common/docker-command
. "$INCLUDE_DIR"/docker-command -c "$quoted_args"
